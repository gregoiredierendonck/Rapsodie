			blockquote
				p = data.index.citation

	div.container-xl.grid-table
		div.grid.grid-three.image-background.grid-border
			= link_to 'http://www.facebook.com/RapsodiePro', target: '_blank' do
				div.texte
					h2 = data.index.box5title
					p.date = data.index.box5baseline
				= image_tag "#{data.index.box5image}", alt: "Rapsodie #{data.index.box5title}", itemprop: 'image'

		div.grid.grid-three.image-background.grid-border
